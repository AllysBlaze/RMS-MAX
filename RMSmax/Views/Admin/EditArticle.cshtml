@model MainViewModel
@{
    Layout = "_LayoutAdmin";
}

<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Tytuł</label>
            <input type="text" class="form-control" placeholder="Podaj tytuł artykułu" required>
        </div>
        <div class="form-group col-md-6">
            <label>Autor</label>
            <input type="text" class="form-control" placeholder="Podaj imię i nazwisko autora" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Zdjęcie wewnętrzne</label>
            <input type="file" class="form-control-file" accept="image/*" />
        </div>
        <div class="form-group col-md-6">
            <label>Zdjęcie aktualnościowe</label>
            <input type="file" class="form-control-file" accept="image/*" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label style="font-weight: bold;">Treść artykułu</label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <textarea required style="width:100%; height:150px;" placeholder="Podaj treść artykułu"></textarea>
        </div>
    </div>
    


    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </div>
</form>