@model RMSmax.Models.ViewModels.Admin.EditArticleViewModel
@{
    Layout = "_LayoutAdmin";
}

<form asp-controller="Admin" asp-action="EditArticle" enctype="multipart/form-data" method="post" >
    <input type="hidden" asp-for="Article.Id"/>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Article.Title">Tytuł</label>
            <input asp-for="Article.Title" type="text" class="form-control" placeholder="Podaj tytuł artykułu" required autocomplete="off">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Article.Author">Autor</label>
            <input asp-for="Article.Author" type="text" class="form-control" placeholder="Podaj imię i nazwisko autora" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PhotoIn">Zdjęcie wewnętrzne</label>
            <input asp-for="PhotoIn" type="file" class="form-control-file" accept="image/*" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PhotoCover">Zdjęcie aktualnościowe</label>
            <input asp-for="PhotoCover" type="file" class="form-control-file" accept="image/*" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="Article.Content" style="font-weight: bold;">Treść artykułu</label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <textarea asp-for="Article.Content" required style="width:100%; height:150px;" placeholder="Podaj treść artykułu" autocomplete="off"></textarea>
        </div>
    </div>
    


    <div class="form-group text-center">
        <a role="button" class="btn btn-danger" asp-controller="Admin" asp-action="ArticleList">Anuluj</a>
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </div>
</form>