@model RMSmax.Models.ViewModels.Admin.EditEmployeeViewModel
@{
    Layout = "_LayoutAdmin";
}

<form asp-controller="Admin" asp-action="EditEmployee" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Employee.Id"/>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="Employee.Degree">Stopień</label>
            <select class="form-control" asp-for="Employee.Degree" required>
                <option selected></option>
                <option>mgr</option>
                <option>dr</option>
                <option>prof</option>
                <option>prof hab.</option>
                <option>inż</option>
                <option>dr inż.</option>
                <option>mgr inż.</option>
            </select>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="Employee.Name">Imię</label>
            <input asp-for="Employee.Name" type="text" class="form-control" placeholder="Podaj imię" required autocomplete="off">
        </div>
        <div class="form-group col-md-5">
            <label asp-for="Employee.LastName">Nazwisko</label>
            <input asp-for="Employee.LastName" type="text" class="form-control" placeholder="Podaj nazwisko" required autocomplete="off">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Employee.Department">Katedra</label>
            <input asp-for="Employee.Department" type="text" class="form-control" placeholder="Podaj katedrę">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Employee.Function">Funkcja</label>
            <input asp-for="Employee.Function" type="text" class="form-control" placeholder="Podaj funkcję">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Employee.Position">Stanowisko</label>
            <input asp-for="Employee.Position" type="text" class="form-control" placeholder="Podaj stanowisko">
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Employee.Room">Pokój</label>
            <input asp-for="Employee.Room" type="text" class="form-control" placeholder="Podaj numer pokoju" autocomplete="off">
        </div>
    </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Employee.Phone">Telefon</label>
                <input asp-for="Employee.Phone" type="tel" class="form-control" maxlength="9" placeholder="Podaj numer telefonu" required autocomplete="off">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Employee.Mail">Email</label>
                <input asp-for="Employee.Mail" type="email" class="form-control" placeholder="Podaj e-mail" required autocomplete="off"> 
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Employee.Timetable">Adres planu zajęć</label>
                <input asp-for="Employee.Timetable" type="url" class="form-control" placeholder="Podaj link do planu zajęć" autocomplete="off">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Photo">Zdjęcie</label>
                <input asp-for="Photo" type="file" class="form-control-file" accept="image/*" />
            </div>
        </div>

        <div class="form-group text-center">
            <a role="button" class="btn btn-danger" asp-controller="Admin" asp-action="EmployeeList">Anuluj</a>
            <button type="submit" class="btn btn-primary">Zapisz</button>
        </div>
</form>