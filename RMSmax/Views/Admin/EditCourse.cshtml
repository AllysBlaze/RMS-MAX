@model EditCourseViewModel
@{
    Layout = "_LayoutAdmin";
}
<style>
    table {
        table-layout: fixed;
    }

    td, th {
        word-wrap: break-word;
    }
</style>
<form asp-controller="Admin" asp-action="EditCourseName" method="post">
    <input type="hidden" name="previousName" value="@Model.Course.Name" />
    <div class="form-row">
        <div class="form-group col-md-12">
            <label name="newName"><strong>Nazwa kierunku</strong></label>
            <input name="newName" value="@Model.Course.Name" maxlength="50" type="text" class="form-control" placeholder="Podaj nazwę kierunku" required autocomplete="off">
            <small class="form-text text-muted ml-1">
                Podana nazwa może mieć maksymalnie 50 znaków.
            </small>
        </div>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Zmień</button>
    </div>
</form>

<!--Specjalizacje 1 st. tabela-->
<table id="specialities1Table" class="table table-striped" style="border-top: 3px solid grey; margin-top:60px;">
    <thead>
        <tr>
            <th scope="col">Lista Specjalizacji Pierwszego Stopnia</th>
            <th scope="col">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Course.FirstDegreeSpecialties.OrderBy(x => x))
        {
            <tr>
                <td>@v</td>
                <td class="align-content-center justify-content-center text-center">
                    <form asp-controller="Admin" asp-action="DeleteSpeciality" method="post">
                        <div class="row">
                            <input type="hidden" name="scroll" value="specialities1Table" />
                            <input type="hidden" name="courseName" value="@Model.Course.Name" />
                            <input type="hidden" name="spec" value="@v" />
                            <input type="hidden" name="degree" value="1" />

                            <button class="btn btn-danger btn-xs" type="submit" data-toggle="tooltip" data-placement="top" title="Usuń" style="margin-left: 15px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                                </svg>
                            </button>
                        </div>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<!--Specjalizacje 1 st. formularz-->
<form style="margin-bottom:60px;" asp-controller="Admin" asp-action="AddSpeciality" method="post">
    <input type="hidden" name="scroll" value="specialities1Table" />
    <input type="hidden" name="courseName" value="@Model.Course.Name" />
    <input type="hidden" name="degree" value="1" />
    <div class="form-row">
        <div class="form-group col-12">
            <label>Nazwa specjalizacji</label>
            <input type="text" name="spec" class="form-control" placeholder="Podaj nazwę specjalizacji drugiego stopnia" style="width: 100%;" required autocomplete="off">
        </div>
    </div>
    <div class="form-group text-center">
        <div class="align-content-center justify-content-center text-center" style="width: 100%;">
            <button class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
                <span>Dodaj specjalizacje</span>
            </button>
        </div>
    </div>
</form>

