@model AricleViewModel

<style>
    .showText p, .showText h2, .showText h3, .showText h4 {
        width: 100%;
    }
    table {
        table-layout: fixed;
        width: 100%;
    }
    td, th {
        word-wrap: break-word;
    }
    @@media only screen and (max-width: 991px) {
        #photo {
            margin-top: 20px;
        }
    }
</style>

<div>
    <div class="container-fluid padding">
        <div class="row padding showText">
            @if (string.IsNullOrEmpty(Model.Article.PhotoIn))
            {
                <h4 style="width: 100%; word-break: break-word;">@Model.Article.Title</h4>
                <div style="word-break: break-word;">
                    @Html.Raw(Model.Article.Content)
                </div>
                
            }
            else
            {
                <div class="col-lg-6">
                    <h4 style="width: 100%; word-break: break-word;">@Model.Article.Title</h4>
                    <div style="word-break: break-word;">
                        @Html.Raw(Model.Article.Content)
                    </div>
                </div>
                <div class="col-lg-6">
                    @{string picfile = "/pictures/picsArticle/" + @Model.Article.Id + "/" + @Model.Article.PhotoIn;}
                    <img id="photo" src="@picfile" class="img-fluid" />
                </div>
            }
        </div>
    </div>
</div>