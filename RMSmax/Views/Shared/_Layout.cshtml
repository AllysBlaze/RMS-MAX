<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/twitter-bootstrap/css/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*"
          href="css/Layout.css" />
    <title>RMS Max!</title>
</head>
<body>
    <nav class="navbar navbar-dark primary-color">
        <h1>RMS Max!</h1>
        <a class="navbar-brand" href="#">
            <img src="https://www.polsl.pl/Wydzialy/RMS/PublishingImages/logowyd.jpg" height="70" alt="rms logo">
        </a>
    </nav>
    <div class="container-fluid flex-fill">
        <div class="row wrapper flex-column flex-sm-row min-vh-100">
            <aside class="col-12 col-sm-2 p-0 bg-dark flex-shrink-1">
                <nav class="navbar navbar-expand-sm navbar-dark bg-dark align-items-start flex-sm-column flex-row">
                    <a class="navbar-brand" href="#">MENU</a>
                    <a href class="navbar-toggler" data-toggle="collapse" data-target=".sidebar">
                        <span class="navbar-toggler-icon"></span>
                    </a>
                    <div class="collapse navbar-collapse sidebar">
                        <ul class="flex-column navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link pl-0" href="#"> <span class="">Strona Główna</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0 dropdown-toggle text-nowrap" href="#m1" data-parent="#navbar1" data-toggle="collapse" data-target="#m1" aria-expanded="false">
                                    <span class="">Studia</span>
                                </a>
                                <div class="collapse" id="m1">
                                    <ul class="flex-column nav">
                                        <a class="nav-link px-0 text-truncate" href="#">Informatyka</a>
                                        <a class="nav-link px-0 text-truncate" href="#">Matematyka</a>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" href="#"> <span class="">Pracownicy</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" href="#"> <span class="">Kontakt</span></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>
            <main class="col bg-light py-3">
                @RenderBody()
            </main>
        </div>

    </div>
    <div class="mt-auto col-12">
        <button type="button" onclick="topFunction()" id="upBtn" class="btn btn-primary float-right">Do góry</button>
        <a id="Creators">Strona stworzona przez IOTeam</a>
    </div>



    <script>
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>



</body>
</html>
