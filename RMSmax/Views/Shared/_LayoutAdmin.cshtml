<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/twitter-bootstrap/css/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="shortcut icon" href="~/pictures/logo/logowyd.jpg">
    <script src="~/lib/wysiwyg/build/ckeditor.js"></script>
    <title>RMS Max!</title>
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous">
    </script>
    <style>
        #Creators {
            margin-left: 30px;
        }

        @@media only screen and (max-width: 420px) {
            #Creators {
                margin-left: 3px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar" style="background-color: @Model.Faculty.Color;">
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-reset"><h1>@Model.Faculty.Name</h1></a>
        <p>Tryb administratora</p>
        <a class="navbar-brand" href="#">
            <img src="~/pictures/logo/@Model.Faculty.Logo" height="70" alt="rms logo">
        </a>
    </nav>
    <div class="container-fluid flex-fill">
        <div class="row wrapper flex-column flex-sm-row min-vh-100">
            <aside class=" col-xl-2 col-lg-2 col-md-3 col-sm-4  bg-dark flex-shrink-1">
                <nav class="navbar navbar-expand-sm navbar-dark bg-dark align-items-start flex-sm-column flex-row">
                    <a class="navbar-brand">MENU</a>
                    <a href class="navbar-toggler" data-toggle="collapse" data-target=".sidebar">
                        <span class="navbar-toggler-icon"></span>
                    </a>
                    <div class="collapse navbar-collapse sidebar">
                        <ul class="flex-column navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="Index" style="border-bottom: solid 2px grey"> <span class="">Informacje o wydziale</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="ArticleList" style="border-bottom: solid 2px grey"> <span class="">Lista aktualności</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="EmployeeList" style="border-bottom: solid 2px grey"> <span class="">Lista pracowników</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="AccountsList" style="border-bottom: solid 2px grey"> <span class="">Lista użytkowników</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="EventLog" style="border-bottom: solid 2px grey"> <span class="">Dziennik zdarzeń</span></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>
            <main class="col-xl-10 col-lg-10 col-md-9 col-sm-8 bg-light py-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="row mt-auto col-12 bg-dark my-auto justify-content-between align-content-center mx-0 text-wrap p-1" style="height:50px; width:100%;">
        <p class="text-white bg-dark text-wrap pt-2" id="Creators" style="font-size: 13px; max-width:250px;">Strona stworzona przez IOTeam</p>
        <a class="nav-link pl-0 text-decoration-none text-reset" asp-controller="Account" asp-action="Logout"><span style="font-size:15px; color: white;">Wyloguj</span></a>
        <button class="btn btn-primary btn-xs" id="upBtn" data-toggle="tooltip" data-placement="top" title="Do góry" style="max-height:40px; max-width:40px; margin-top:3px; margin-bottom:3px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-up" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708l6-6z" />
            </svg>
        </button>
    </div>

    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tooltips.js"></script>
    <script src="~/js/goTop.js"></script>

</body>
</html>
