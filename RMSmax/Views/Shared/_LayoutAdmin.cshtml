<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/twitter-bootstrap/css/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <title>RMS Max!</title>
</head>
<body>
    <nav class="navbar" style="background-color: @Model.Faculty.Color;">
        <h1>@Model.Faculty.Name</h1>
        <p>Tryb administratora</p>
        <a class="navbar-brand" href="#">
            <img src="~/pictures/logo/@Model.Faculty.Logo" height="70" alt="rms logo">
        </a>
    </nav>
    <div class="container-fluid flex-fill">
        <div class="row wrapper flex-column flex-sm-row min-vh-100">
            <aside class=" col-xl-2 col-lg-2 col-md-3 col-sm-4  bg-dark flex-shrink-1">
                <nav class="navbar navbar-expand-sm navbar-dark bg-dark align-items-start flex-sm-column flex-row">
                    <a class="navbar-brand">MENU</a>
                    <a href class="navbar-toggler" data-toggle="collapse" data-target=".sidebar">
                        <span class="navbar-toggler-icon"></span>
                    </a>
                    <div class="collapse navbar-collapse sidebar">
                        <ul class="flex-column navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="Index" style="border-bottom: solid 2px grey"> <span class="">Informacje o wydziale</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="ArticleList" style="border-bottom: solid 2px grey"> <span class="">Lista artykułów</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-controller="Admin" asp-action="EmployeeList" style="border-bottom: solid 2px grey"> <span class="">Lista Pracowników</span></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>
            <main class="col bg-light py-3">
                @RenderBody()
            </main>
        </div>

    </div>
    <div class="row mt-auto col-12 bg-dark my-auto justify-content-between align-content-center mx-0" style="height:50px">
        <p class="text-white bg-dark pl-3 ml-3" id="Creators">Strona stworzona przez IOTeam</p>
        <a class="nav-link pl-0" asp-controller="Home" asp-action="Index"> <span class="">WYLOGUJ</span></a>
        <button type="button" onclick="topFunction()" id="upBtn" class="btn btn-primary float-right" style="height: 40px">Do góry</button>
    </div>



    <script>
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tooltips.js"></script>



</body>
</html>
