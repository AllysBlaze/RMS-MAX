@model RMSmax.Models.ViewModels.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/twitter-bootstrap/css/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <title>Logowanie do Panelu Administracyjnego</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8" style="margin-top: 90px; height: auto; text-align: center; border-radius: 20px; border: solid 3px gray;">
                <div class="col-lg-12" style="margin-top: 25px;">
                    <img src="~/pictures/logo/@Model.Faculty.Logo" height="100" alt="rms logo">

                </div>
                <div class="col-lg-12" style="margin-top: 15px; text-align: center; font-size: 30px; margin-top: 15px; font-weight: bold;">
                    Logowanie do Panelu Administracyjnego
                </div>

                <div class="col-lg-12">
                    <div class="col-lg-12" style="margin-top: 25px; text-align: left;">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <input type="hidden" asp-for="ReturnUrl"/>                            
                            <div class="form-group" style="margin-bottom: 25px;">
                                <label asp-for="Name" class="form-control-label" style="font-weight: bold;">Login</label>
                                <div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Podaj login" required autocomplete="off">
                            </div>
                            <div class="form-group" style="margin-bottom: 25px;">
                                <label asp-for="Password" class="form-control-label" style="font-weight: bold;">Hasło</label>
                                <div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Podaj hasło" required autocomplete="off">
                            </div>
                            <div class="col-lg-12">
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-primary" style="margin-bottom:20px;">Zaloguj</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>