@model RMSmax.Models.ViewModels.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="lib/twitter-bootstrap/css/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous">
    </script>
    <link rel="shortcut icon" href="~/pictures/logo/logowyd.jpg">
    <title>Panel Administracyjny</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-2"></div>
            <div class="col-lg-6 col-md-8" style="margin-top: 90px; height: auto; text-align: center; border-radius: 20px; border: solid 3px gray;">
                <div class="col-lg-12" style="margin-top: 25px;">
                    <img src="~/pictures/logo/@Model.Faculty.Logo" height="100" alt="rms logo">
                </div>
                <div class="col-lg-12" style="margin-top: 15px; text-align: center; font-size: 30px; margin-top: 15px; font-weight: bold;">
                    Logowanie do Panelu Administracyjnego
                </div>
                <div class="col-lg-12" style="margin-top: 25px; text-align: left;">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group" style="margin-bottom: 25px;">
                            <label asp-for="Name" class="form-control-label" style="font-weight: bold;">Login</label>
                            <div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-row col-12">
                                <input asp-for="Name" type="text" class="form-control col-11" placeholder="Podaj login" required autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 25px;">
                            <label asp-for="Password" class="form-control-label" style="font-weight: bold;">Hasło</label>
                            <div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-row col-12">
                                <input asp-for="Password" type="password" id="pass" class="form-control col-11" placeholder="Podaj hasło" required autocomplete="off">
                                <div class="col-1 justify-content-start align-content-center text-left">
                                    <a class="btn btn-xs col-12 text-left justify-content-start" id="show" data-toggle="tooltip" data-placement="top" title="Pokaż hasło" style="background-color: Transparent; background-repeat: no-repeat; border: none; cursor: pointer; overflow: hidden; outline: none; max-width: 40px; min-width: 40px; padding-left: 5px;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-eye" viewBox="0 0 30 30">
                                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                        </svg>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-primary" style="margin-bottom:20px;">Zaloguj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/showPassLogin.js"></script>
</body>
</html>